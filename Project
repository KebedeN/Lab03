import streamlit as st
from streamlit_extras.switch_page_button import switch_page

def get_movie_recommendations(genre):

    if genre == "Comedy":
        return ["The Hangover", "Superbad", "Bridesmaids"]
    elif genre == "Action":
        return ["The Dark Knight", "Die Hard", "Mad Max: Fury Road"]
    elif genre == "Drama":
        return ["The Shawshank Redemption", "The Godfather", "Forrest Gump"]
    else:
        return []


def main():
    st.set_page_config(
        page_title="Movie Night",
        layout="centered",
        initial_sidebar_state="auto",
    )
    
    st.title("Movie Night")
    st.divider()
    st.header("Planning a movie night? Choose your favorite genre to get recommendations!")


    genre = st.sidebar.selectbox("Select Genre", ["Comedy", "Action", "Drama"])

    if st.sidebar.button("Get Recommendations"):
        movie_recommendations = get_movie_recommendations(genre)
        if movie_recommendations:
            st.success("Here are your movie recommendations:")
            for movie in movie_recommendations:
                st.write(movie)
        else:
            st.error("No recommendations found for selected genre.")
            
            
    col1, col2, col3 = st.columns(3)
    with col1:
        st.image("Images/NetflixImg.jpeg", use_column_width=True)
        location = st.button("Netflix", use_container_width=False)
        if location:
            switch_page("Netflix")

    with col2:
        st.image("Images/PrimeImg.png", use_column_width=True)
        location = st.button("Amazon Prime Video", use_container_width=False)
        if location:
            switch_page("Amazon Prime")

    with col3:
        st.image("Images/HuluImg.png", use_column_width=True)
        location = st.button("Hulu", use_container_width=False)
        if location:
            switch_page("Hulu")

main()


